<%- include('../inc/top') %>
    <div class="container-fluid">
        <p class="fw-bold fs-2 text-primary ">Product Warehouse</p>
        <div class="d-flex m-2">
            <form method="get" action="/product_size_color/search" class="input-group m-4 d-flex">
                <input placeholder="Search for your product ...." aria-label="Search for your product" type="text"
                    class="form-control" id="floatingInput" name="search">
                <div class="d-flex">
                    <button type="submit" class="input-group-text bg-primary" style="margin-left: 10px; margin-right: 10px;"
                        for="filterGroup1">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                            <!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                            <path
                                d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" />
                        </svg>
                    </button>
                    <select class="form-select" id="filterGroup2" onchange="filterNameProduct()">
                     
                        <option value="all" <%= selectedroductName === 'all' ? 'selected' : '' %>>All</option> 
                        <% listproduct?.forEach(product => { %>
                            <option value="<%= product._id %>"  <%=product._id == selectedroductName ? 'selected' : '' %>>
                                <%= product.name %>
                            </option>
                        <% }); %>
                    </select>
                    <script>
                        function filterNameProduct() {
                            var selectedroductName = document.getElementById("filterGroup2").value;
                            if (selectedroductName === 'all') {
                                window.location.href = "/product_size_color/getListAll/1" ;
                            }else{
                                window.location.href = "/product_size_color/filterNameProduct/?productName=" + selectedroductName;
                            }
                               
                            
                        }
                    </script>
                </div>
            </form>
        </div>
        
        <div class="fw-bolder fs-4 text-success">
            <%= message %>
        </div>
        <!-- <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <button type="button" class="btn btn-danger">Left</button>
            <button type="button" class="btn btn-warning">Middle</button>
            <button type="button" class="btn btn-success">Right</button>
        </div> -->
      

        <div class="" style="margin-left: 15px;">

            <a class="btn btn-primary" href="/product_size_color/add_product_size_color">Add Product Size Color</a>
            <div class="row"
                style="width: 100%; background-color: white; border-radius: 13px; padding: 15px; box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.4); display: flex;">
                <table id="example" class="table table-bordered border-dark">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name Product</th>
                            <th>Price
                                <span class="sort-icon">
                                    <a href="/product_size_color/sortDown"><i class="fa-solid fa-caret-down"></i></a>
                                    <a href="/product_size_color/sortUp"><i class="fa-solid fa-caret-up"></i></a>
                                </span>
                            </th>
                            <th>Size</th>
                            <th>Color</th>
                            <th>Quantity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    
                    <% for (let i=0; i < productListSizeColor.length; i++) { %>
                        <% const row=productListSizeColor[i]; %>
                       
                            <tr style="height: 70px;">
                               
                                <td>
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <%= row.product_id ? row.product_id.name : 'NULL' %>
                                </td>
                                <td>
                                    <%= row.product_id ? row.product_id.price : 'NULL' %>
                                </td>
                                <td>
                                    <%= row.size_id ? row.size_id.name : 'NULL' %>
                                </td>
                                <td>
                                    <%= row.color_id ? row.color_id.name : 'NULL' %>
                                </td>
                                <td>
                                    <%= row.quantity ? row.quantity : 'Out of stock' %>
                                </td>
                                <td style="width: 190px;">
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#staticBackdropp">
                                    Delete
                                </button>
                                <div class="modal fade" id="staticBackdropp" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Notification</h5>
                                          
                                        </div>
                                        <div class="modal-body">
                                            do you want to delete    <%= row.product_id ? row.product_id.name : 'NULL' %>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                                <a href="/product_size_color/delete_product_color_size/<%=row.id %>"
                                                    class="btn btn-danger">Save changes</a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                                    <a href="/product_size_color/update_product_size_color/<%=row.id %>"
                                        class="btn btn-primary">Update</a>
                                </td>
                            </a>
                            </tr>
                      
                            <% } %>
                       
                </table>
            </div>
        
        </div>


        <nav aria-label="Page navigation example" style="margin-top: 100px;">
            <ul class="pagination">
                <% if (page==1 || countProducts===0) { %>
                    <!-- nếu trang hiện tại bằng 1 thì không cho giảm -->
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                    <% } else { %>
                        <!-- khác 1 thì cho giảm -->
                        <li class="page-item">
                            <a class="page-link" href="/product_size_color/getListAll/<%= page - 1 %>">Previous</a>
                        </li>
                        <% } %>

                            <% for (let i=1; i <=countPages; i++) { %>

                                <li class="page-item">
                                    <a style="<%= i === page ? 'color: white; background-color: rgba(13,110,253,255);' : '' %>"
                                        href="/product_size_color/getListAll/<%= i %>" class="page-link">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>


                                    <% if (countPages==page || countProducts===0) { %>
                                        <!-- // tổng số trang bằng trang hiện tại thì không cho tăng -->
                                        <li class="page-item disabled">
                                            <span class="page-link">Next</span>
                                        </li>
                                        <% } else { %>
                                            <!-- // tổng số trang khác trang hiện tại thì cho cho tăng -->
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="/product_size_color/getListAll/<%= page +  1 %>">Next</a>
                                            </li>
                                            <% } %>
            </ul>
        </nav>
    </div>

    <%- include('../inc/bottom') %>