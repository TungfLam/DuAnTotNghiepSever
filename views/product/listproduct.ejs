<%- include('../inc/top') %>
    <div class="container-fluid">
        <p class="fw-bold fs-2 text-primary ">List Product</p>

        <!-- tìm kiếm và lọc -->
        <div class="d-flex  m-2">
            <div class="input-group me-3 d-flex">
                <input placeholder="Search for your product ...." aria-label="Search for your product" type="text"
                    class="form-control" id="floatingInput" style="min-width: 50%;">
                <div class="d-flex">
                    <label class="input-group-text" for="filterGroup1">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em"
                            viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                            <path
                                d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" />
                        </svg>
                    </label>
                    <select class="form-select" id="filterGroup1">
                        <option value="1">Tên</option>
                        <option value="2">Loại</option>
                        <option value="3">Ảnh </option>
                        <option value="4">Mô tả</option>
                        <option value="5">Giá tiền</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- model -->

        <div class="d-flex justify-content-end ">
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
                data-bs-target="#staticBackdrop">Add Product</button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="false" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">

                <div class="modal-content">
                    <form method="POST" action="/product/addproduct" enctype="multipart/form-data" multiple>
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" style="color: rgb(32, 39, 226);" id="staticBackdropLabel">
                                Add Product
                            </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="name">
                                <label for="floatingInput">Name Product</label>
                            </div>
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="description">
                                <label for="floatingInput">Description</label>
                            </div>

                            <div class="input-group mb-3">
                                <input type="file" class="form-control" id="inputGroupFile02" name="image" multiple>
                                <label class="input-group-text" for="inputGroupFile02">Upload</label>
                            </div>

                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="price">
                                <label for="floatingInput">Price</label>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--  -->

        <div class="row p-3">
            <table id="example" class="table table-striped table-bordered border-dark"
                style="width:95%;margin-left: 25px;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name Product</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Actions</th>
                        <!-- <th>Ngày Bán</th>
                <th>Giá Tiền</th> -->
                    </tr>
                </thead>
                <% for (let i = 0; i < listProducts.length; i++) { %>
                    <% const row = listProducts[i]; %>
                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <%= row.name %>
                        </td>
                        <td>
                            <%= row.description %>
                        </td>
                        <td>
                            <img src="data:image/jpeg;base64,<%=row.image[1]%>" alt="Hình ảnh" width="70px" height="70px">
                          
                        </td>
                        <td>
                            <%= row.price %>
                        </td>
                        <td>
                            <a href="/product/deleteproduct/<%= row._id %>" class="btn btn-primary">xóa</a>
                        </td>
                    </tr>
                <% } %>
                
            </table>
        </div>


    </div>

    <%- include('../inc/bottom') %>