<%- include('../inc/top') %>
    <div class="container-fluid">
        <p class="fw-bold fs-2 text-primary ">Danh sách sản phẩm</p>

        <!-- tìm kiếm và lọc -->
        <div class="d-flex  m-2">
            <form method="get" action="/product/search" class="input-group m-4 d-flex">
                <input placeholder="Search for your product ...." aria-label="Search for your product" type="text"
                    class="form-control" id="floatingInput" name="search">
                <div class="d-flex">
                    <button type="submit" class="input-group-text bg-primary"
                        style="margin-left: 10px; margin-right: 10px;" for="filterGroup1">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em"
                            viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                            <path
                                d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" />
                        </svg>
                    </button>
                    <select class="form-select" id="filterGroup1" onchange="filterCategory()">
                        <option value="all" <%=selectedCategoryId==='all' ? 'selected' : '' %>>Tất cả</option>
                        <% listCategory.forEach(category=> { %>
                            <option value="<%= category._id %>" <%=category._id==selectedCategoryId ? 'selected' : '' %>
                                >
                                <%= category.name %>
                            </option>
                            <% }); %>
                    </select>
                    <script>
                        function filterCategory() {
                            var selectedCategoryId = document.getElementById("filterGroup1").value;

                            // Kiểm tra nếu giá trị là "all", chuyển hướng đến /product/listproduct/1
                            if (selectedCategoryId === 'all') {
                                window.location.href = "/product/listproduct/1";
                            } else {
                                window.location.href = "/product/filterCategory/?category=" + selectedCategoryId;
                            }
                        }
                    </script>
                </div>
            </form>
        </div>

        <!-- model -->

        <div class="d-flex justify-content-end ">
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
                data-bs-target="#staticBackdrop"> <i class="fa-solid fa-plus" style="color: #ffffff;"></i> Thêm sản phẩm</button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">

                <div class="modal-content">
                    <form method="POST" action="/product/addproduct" enctype="multipart/form-data" multiple>

                        <div class="modal-header">
                            <h1 class="modal-title fs-5" style="color: rgb(32, 39, 226);" id="staticBackdropLabel">
                                Add Product
                            </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="name">
                                <label for="floatingInput">Name Product</label>
                            </div>
                            <div class="form-floating mb-2">
                                <select name="category" class="form-select  " id="filterGroup1">
                                    <% listCategory.forEach(category=> { %>
                                        <option value="<%= category._id %>" %>>
                                            <%= category.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="description">
                                <label for="floatingInput">Description</label>
                            </div>

                            <div class="input-group mb-3">
                                <input type="file" class="form-control" id="inputGroupFile02" name="image" multiple>
                                <label class="input-group-text" for="inputGroupFile02">Upload</label>
                            </div>

                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="price">
                                <label for="floatingInput">Price</label>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--  -->
        <style>
            /* Thêm vào phần style của bạn hoặc tạo một tệp CSS riêng */
            .table-hover tbody tr:hover {
                background-color: #f5f5f5;
                /* Màu nền khi hover */
            }
        </style>

        <div class="row p-3">
            <table id="example" class="table  table-bordered table-hover border-dark"
                style="width:95%;margin-left: 25px;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên sản phẩm</th>
                        <th>Thể loại</th>
                        <th>Giá
                            <span class="sort-icon">
                                <a href="/product/sortDown"><i class="fa-solid fa-caret-down"></i></i></a>
                                <a href="/product/sortUp"><i class="fa-solid fa-caret-up"></i></a>
                            </span>

                        </th>
                        <th>Ảnh</th>
                        <th>Mô tả</th>
                        <th>Thao tác</th>

                    </tr>
                </thead>
                <script>
                    function onClickItem(va) {
                        window.location.href = "/product/detail/" + va;
                    }
                </script>
                <% if (listProducts.length===0) { %>
                    <tr>
                        <td colspan="7" style="text-align: center;justify-content: center;">
                            <p>Dữ liệu không tồn tại.</p>
                        </td>
                    </tr>
                    <% } else { %>
                        <% for (let i=0; i < listProducts.length; i++) { %>
                            <% const row=listProducts[i]; %>
                                <tr style="height: 100px;">
                                    <td onclick="onClickItem('<%= row._id %>')" style="width: 60px;">
                                        <%= startCount + i %>

                                    </td>
                                    <td onclick="onClickItem('<%= row._id %>')" style="width: 300px;">
                                        <%= row.name %>
                                    </td>

                                    <td onclick="onClickItem('<%= row._id %>')" style="width: 150px;">
                                        <%= row?.category_id?.name ? row.category_id.name : 'null' %>
                                    </td>
                                    <td class="" onclick="onClickItem('<%= row._id %>')" style="width: 90px;">
                                        <i class="fa-regular fa-money-bill-1"></i>
                                        <%= (row.price ).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %>
                                    </td>
                                    
                                    <td onclick="onClickItem('<%= row._id %>')" style="width: 100px;">
                                        <img src="data:image/jpeg;base64,<%=row.image[0]%>" alt="Hình ảnh" width="70px"
                                            height="70px">
                                    </td>
                                    <td onclick="onClickItem('<%= row._id %>')" style="width: 300px;">
                                        <%= row.description %>
                                    </td>

                                    <td style="width: 190px;">

                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                            data-bs-target="#staticBackdropp">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="staticBackdropp" data-bs-backdrop="static"
                                            data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                            aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="staticBackdropLabel">Notification
                                                        </h5>

                                                    </div>
                                                    <div class="modal-body">
                                                        do you want to delete <%= row.name %> ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Close</button>
                                                        <a href="/product/deleteproduct/<%= row._id %>?countPages=<%= countPages %>&countProducts=<%= countProducts %>"
                                                            class="btn btn-danger">Save changes</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <a href="/product/updateproduct/<%= row._id %>"
                                            class="btn btn-primary">
                                            <i class="fa-regular fa-pen-to-square"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>


            </table>
        </div>
        <!-- Modal -->

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <% if (page==1 || countProducts===0) { %>
                    <!-- nếu trang hiện tại bằng 1 thì không cho giảm -->
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                    <% } else { %>
                        <!-- khác 1 thì cho giảm -->
                        <li class="page-item">
                            <a class="page-link" href="/product/listproduct/<%= page - 1 %>">Previous</a>
                        </li>
                        <% } %>

                            <% for (let i=1; i <=countPages; i++) { %>

                                <li class="page-item">
                                    <a style="<%= i === page ? 'color: white; background-color: rgba(13,110,253,255);' : '' %>"
                                        href="/product/listproduct/<%= i %>" class="page-link">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>


                                    <% if (countPages==page || countProducts===0) { %>
                                        <!-- // tổng số trang bằng trang hiện tại thì không cho tăng -->
                                        <li class="page-item disabled">
                                            <span class="page-link">Next</span>
                                        </li>
                                        <% } else { %>
                                            <!-- // tổng số trang khác trang hiện tại thì cho cho tăng -->
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="/product/listproduct/<%= page +  1 %>">Next</a>
                                            </li>
                                            <% } %>
            </ul>
        </nav>



    </div>

    <%- include('../inc/bottom') %>