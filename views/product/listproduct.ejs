<%- include('../inc/top') %>
    <div class="container-fluid">
        <p class="fw-bold fs-2 text-primary ">List Product</p>

        <!-- tìm kiếm và lọc -->
        <div class="d-flex  m-2">
            <form method="get" action="/product/search" class="input-group m-4 d-flex">
                <input placeholder="Search for your product ...." aria-label="Search for your product" type="text"
                    class="form-control" id="floatingInput" name="search">
                <div class="d-flex">
                    <button type="submit" class="input-group-text bg-primary"
                        style="margin-left: 10px; margin-right: 10px;" for="filterGroup1">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                          
                        </svg>
                    </button>
                    <select class="form-select" id="filterGroup1">
                        <option  value="1">Name</option>
                        <option value="2">Description</option>
                        <option value="3">Image </option>
                        <option value="4">Price</option>
                        <option value="5">Actions</option>
                    </select>
                </div>
            </form>
        </div>

        <!-- model -->

        <div class="d-flex justify-content-end ">
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
                data-bs-target="#staticBackdrop">Add Product</button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="false" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">

                <div class="modal-content">
                    <form method="POST" action="/product/addproduct?countPages=<%= countPages %>&countProducts=<%= countProducts %>" enctype="multipart/form-data" multiple>

                        <div class="modal-header">
                            <h1 class="modal-title fs-5" style="color: rgb(32, 39, 226);" id="staticBackdropLabel">
                                Add Product
                            </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="name">
                                <label for="floatingInput">Name Product</label>
                            </div>
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="description">
                                <label for="floatingInput">Description</label>
                            </div>

                            <div class="input-group mb-3">
                                <input type="file" class="form-control" id="inputGroupFile02" name="image" multiple>
                                <label class="input-group-text" for="inputGroupFile02">Upload</label>
                            </div>

                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Fullname"
                                    required name="price">
                                <label for="floatingInput">Price</label>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--  -->

        <div class="row p-3">
            <table id="example" class="table table-striped table-bordered border-dark"
                style="width:95%;margin-left: 25px;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name Product</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Actions</th>
                        
                    </tr>
                </thead>
                <% for (let i=0; i < listProducts.length; i++) { %>
                    <% const row=listProducts[i]; %>
                        <tr style="height: 100px;">
                            <td>
                                <%= startCount + i %>
                            </td>
                            <td>
                                <%= row.name %>
                            </td>
                            <td>
                                <%= row.description %>
                            </td>
                            <td>
                                <img src="data:image/jpeg;base64,<%=row.image[0]%>" alt="Hình ảnh" width="70px"
                                    height="70px">

                            </td>
                            <td>
                                <%= row.price %>
                            </td>

                            <td style="width: 190px;">
                                <a href="/product/deleteproduct/<%= row._id %>?countPages=<%= countPages %>&countProducts=<%= countProducts %>"
                                    class="btn btn-danger">Delete</a>

                                <a href="/product/updateproduct/<%= row._id %>" class="btn btn-primary">Update</a>
                            </td>
                        </tr>
                        <% } %>

            </table>
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <% if (page==1 || countProducts===0) { %>
                    <!-- nếu trang hiện tại bằng 1 thì không cho giảm -->
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                    <% } else { %>
                        <!-- khác 1 thì cho giảm -->
                        <li class="page-item">
                            <a class="page-link" href="/product/listproduct/<%= page - 1 %>">Previous</a>
                        </li>
                        <% } %>

                            <% for (let i=1; i <=countPages; i++) { %>

                                <li class="page-item">
                                    <a style="<%= i === page ? 'color: white; background-color: rgba(13,110,253,255);' : '' %>"
                                        href="/product/listproduct/<%= i %>" class="page-link">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>


                                    <% if (countPages==page || countProducts===0) { %>
                                        <!-- // tổng số trang bằng trang hiện tại thì không cho tăng -->
                                        <li class="page-item disabled">
                                            <span class="page-link">Next</span>
                                        </li>
                                        <% } else { %>
                                            <!-- // tổng số trang khác trang hiện tại thì cho cho tăng -->
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="/product/listproduct/<%= page +  1 %>">Next</a>
                                            </li>
                                            <% } %>
            </ul>
        </nav>



    </div>

    <%- include('../inc/bottom') %>